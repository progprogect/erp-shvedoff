{
  "name": "erp-shvedoff",
  "version": "1.0.0",
  "description": "Система управления складскими остатками и заказами резинотехнических изделий",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd backend && npm run dev",
    "client:dev": "cd frontend && npm start",
    "server:install": "cd backend && npm install",
    "client:install": "cd frontend && npm install",
    "install:all": "npm install && npm run server:install && npm run client:install",
    "build": "npm run client:install && npm run server:install && cd frontend && npm run build && cd ../backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "postinstall": "npm run install:all",
    "heroku-postbuild": "npm run build",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed"
  },
  "keywords": [
    "erp",
    "inventory",
    "orders",
    "rubber-products"
  ],
  "author": "Development Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0"
  }
}
